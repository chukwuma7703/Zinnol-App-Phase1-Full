{
  "$schema": "https://json.schemastore.org/package",
  "name": "zinnol-exam-functions",
  "version": "1.0.0",
  "description": "Cloud Functions for Zinnol App (Exam, Results, OCR)",
  "main": "index.js",
  "type": "module",
  "engines": {
    "node": "22"
  },
  "scripts": {
    "start": "node server.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix ../frontend",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "test": "vitest run",
    "test:all": "vitest run",
    "test:debug": "vitest run --reporter=verbose",
    "test:handles": "vitest run --run",
    "test:fix-hanging": "node fix-jest-hanging.js",
    "test:coverage-improve": "node test-coverage-improve.js",
    "test:clean": "jest --clearCache && rm -rf coverage",
    "benchmark": "node benchmark.js",
    "lint": "eslint .",
    "predeploy": "npm run lint",
    "firebase:emulate": "firebase emulators:start --only functions,hosting",
    "firebase:deploy": "firebase deploy --only functions",
    "firebase:shell": "firebase functions:shell",
    "firebase:logs": "firebase functions:log",
    "test:watch": "jest --watch --runInBand",
    "test:coverage": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.config.cjs --coverage --runInBand --forceExit --detectOpenHandles",
    "test:coverage:strict": "COVERAGE_STRICT=true jest --coverage --runInBand --forceExit",
    "test:coverage:detailed": "jest --coverage --verbose --runInBand --forceExit",
    "test:unit": "jest --testPathPattern=test/unit --runInBand --forceExit",
    "test:unit:focused": "jest --config jest.unit.config.cjs --runInBand",
    "test:unit:focused:coverage": "jest --config jest.unit.config.cjs --coverage --runInBand",
    "test:unit:focused:coverage:ci": "jest --config jest.unit.config.cjs --coverage --runInBand --reporters=default --reporters=jest-junit",
    "test:unit:focused:open-handles": "jest --config jest.unit.config.cjs --runInBand --detectOpenHandles --reporters=default",
    "analyze:open-handles": "node scripts/analyze-open-handles.js",
    "coverage:compare:focused": "node scripts/compare-focused-coverage.js",
    "coverage:baseline:update:focused": "node scripts/update-focused-coverage-baseline.js",
    "test:integration": "jest --config jest.integration.config.cjs --runInBand",
    "test:integration:coverage": "jest --config jest.integration.config.cjs --coverage --runInBand",
    "test:e2e": "jest --testPathPattern=test/e2e",
    "test:smoke": "NODE_OPTIONS=--experimental-vm-modules jest --config jest.smoke.config.js --runInBand",
    "test:smoke:coverage": "jest --config jest.smoke.config.js --runInBand --coverage",
    "test:smoke:watch": "jest --config jest.smoke.config.js --runInBand --watch",
    "test:heavy": "jest --runInBand controllers/examController.test.js controllers/*integration*.test.js",
    "test:ci": "npm run test:smoke && npm run test:unit && npm run test:integration",
    "test:quick": "npm run test:smoke",
    "test:full": "npm run test:all --coverage",
    "bench:tokens": "node scripts/bench-tokens.js 10000",
    "seed:gsa": "node -e \"process.env.MONGO_URI=process.env.MONGO_URI||'mongodb://127.0.0.1:27017/zinnolDB';process.env.GSA_EMAIL=process.env.GSA_EMAIL||'global.admin@example.com';process.env.GSA_PASSWORD=process.env.GSA_PASSWORD||'ChangeMe123!';require('./createGlobalSuperAdmin.cjs');\"",
    "prepare": "husky",
    "test:vitest": "vitest run",
    "test:vitest:watch": "vitest",
    "test:vitest:coverage": "vitest run --coverage",
    "test:vitest:integration": "vitest run test/routes"
  },
  "dependencies": {
    "@google-cloud/vision": "^5.3.3",
    "@google/generative-ai": "^0.24.1",
    "@sendgrid/mail": "^8.1.0",
    "@sentry/node": "^10.11.0",
    "@sentry/profiling-node": "^10.11.0",
    "@simplewebauthn/server": "^13.1.2",
    "axios": "^1.12.1",
    "base64url": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.4",
    "chalk": "^5.6.2",
    "chart.js": "^4.5.0",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "csv-parser": "^3.2.0",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "exceljs": "^4.4.0",
    "express": "^4.19.2",
    "express-async-handler": "^1.2.0",
    "express-mongo-sanitize": "^2.2.0",
    "express-rate-limit": "^8.1.0",
    "express-validator": "^7.2.1",
    "express-winston": "^4.2.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "fs": "^0.0.1-security",
    "google-auth-library": "^10.3.0",
    "googleapis": "^159.0.0",
    "helmet": "^8.1.0",
    "hpp": "^0.2.3",
    "ioredis": "^5.7.0",
    "joi": "^18.0.1",
    "json2csv": "^6.0.0-alpha.2",
    "jsonwebtoken": "^9.0.2",
    "jwt-decode": "^4.0.0",
    "mongoose": "^8.18.1",
    "morgan": "^1.10.1",
    "multer": "^2.0.2",
    "node-cron": "^3.0.3",
    "node-fetch": "^3.3.2",
    "nodemailer": "^7.0.6",
    "openai": "^5.20.2",
    "prom-client": "^15.1.3",
    "react-chartjs-2": "^5.3.0",
    "react-confetti": "^6.4.0",
    "sharp": "^0.34.3",
    "socket.io": "^4.7.5",
    "socket.io-client": "^4.8.1",
    "speakeasy": "^2.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tesseract.js": "^5.0.5",
    "uuid": "^9.0.1",
    "winston": "^3.17.0",
    "winston-daily-rotate-file": "^5.0.0",
    "xss": "^1.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.28.3",
    "@babel/plugin-syntax-jsx": "^7.27.1",
    "@babel/preset-env": "^7.28.3",
    "@babel/preset-react": "^7.27.1",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@jest/globals": "29.7.0",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/compression": "^1.8.1",
    "@types/jest": "29.5.12",
    "@types/morgan": "^1.9.10",
    "@types/uuid": "^9.0.8",
    "babel-jest": "29.7.0",
    "concurrently": "^8.2.2",
    "cross-env": "^10.0.0",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "firebase-functions-test": "^3.3.0",
    "globals": "^15.8.0",
    "husky": "^9.1.6",
    "identity-obj-proxy": "^3.0.0",
    "jest": "29.7.0",
    "jest-environment-node": "29.7.0",
    "jest-junit": "^16.0.0",
    "jest-runner": "29.7.0",
    "mongodb-memory-server": "^9.5.0",
    "nodemon": "^3.1.4",
    "prettier": "^3.3.3",
    "supertest": "^7.1.4",
    "vitest": "^3.2.4"
  },
  "private": true
}